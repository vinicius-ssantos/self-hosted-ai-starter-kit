# Database Configuration
POSTGRES_USER=root
POSTGRES_PASSWORD=password
POSTGRES_DB=n8n

# n8n Configuration
N8N_ENCRYPTION_KEY=super-secret-key
N8N_USER_MANAGEMENT_JWT_SECRET=even-more-secret
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_PORT=5678

# Task Runners - Enable for better performance and security
N8N_RUNNERS_ENABLED=true

# Allow workflows to access environment variables (required for course upload workflow)
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Disable bare repositories for Git Node (security)
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Enforce correct file permissions for settings file
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# For Mac users running OLLAMA locally
# See https://github.com/n8n-io/self-hosted-ai-starter-kit?tab=readme-ov-file#for-mac--apple-silicon-users
# OLLAMA_HOST=host.docker.internal:11434

# Services Ports
OLLAMA_PORT=11434
QDRANT_PORT=6333

# Course Upload Configuration
# Local path to the courses directory that will be uploaded to Google Drive
COURSES_LOCAL_PATH=./downloads

# Local path for temporary files (tar.gz archives before upload)
COURSES_TMP_PATH=./shared/tmp

# Google Drive folder ID that will store the uploaded course archives
# Get this ID from the Google Drive folder URL: https://drive.google.com/drive/folders/FOLDER_ID
# GOOGLE_DRIVE_COURSES_FOLDER_ID=

# Cron schedule for automatic course uploads (24-hour format)
CRON_SCHEDULE_HOUR=3
CRON_SCHEDULE_MINUTE=0

# Upload Configuration
# Maximum time to wait for upload (in milliseconds) - 30 minutes default
N8N_WORKFLOW_TIMEOUT=1800000
# Maximum execution time per workflow (in seconds) - 2 hours default
EXECUTIONS_TIMEOUT=7200
# Maximum execution time that can be set for a workflow (in seconds)
EXECUTIONS_TIMEOUT_MAX=86400


